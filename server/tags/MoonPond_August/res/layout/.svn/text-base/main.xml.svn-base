<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/FocusHolder" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0px" android:layout_height="0px" />
	<TextView android:id="@+id/ConnectTitle" android:text="@string/connect_title" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<AutoCompleteTextView android:id="@+id/ConnectAddress" android:text="@string/connect_default_addr" android:layout_width="fill_parent" android:layout_height="wrap_content" android:editable="true" android:isScrollContainer="false" android:singleLine="true" android:typeface="monospace" android:imeOptions="actionDone"></AutoCompleteTextView>
	<TextView android:id="@+id/MasterTitle" android:text="@string/master_title" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<AutoCompleteTextView  android:id="@+id/MasterAddress" android:text="@string/master_default_addr" android:layout_width="fill_parent" android:layout_height="wrap_content"  android:editable="true" android:isScrollContainer="false" android:singleLine="true" android:typeface="monospace" android:imeOptions="actionDone"></AutoCompleteTextView>
	<LinearLayout android:id="@+id/ButtonLayout" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ToggleButton android:id="@+id/ConnectToggle" android:text="@string/connect_button" android:layout_width="0dp" android:layout_weight="0.66" android:layout_height="fill_parent"></ToggleButton>
		<Button android:id="@+id/DebugButton" android:text="@string/debug_button" android:layout_width="0dp" android:layout_weight="0.33" android:layout_height="wrap_content"></Button>
	</LinearLayout>
	<TextView android:id="@+id/IpAddressTitle" android:text="@string/ipaddress_title" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<TextView android:id="@+id/IpAddressText" android:text="@string/ipaddress_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:typeface="monospace" android:gravity="center_horizontal"></TextView>
	<TextView android:id="@+id/LogTitle" android:text="@string/log_title" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<ListView android:id="@+id/LogList" android:layout_width="wrap_content" android:layout_height="fill_parent"></ListView>
</LinearLayout>
